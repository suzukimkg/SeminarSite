    "next": "^15.0.3",
    "prettier": "^3.3.3",
    "react": "^18.3.1",
    "react-chartjs-2": "^5.2.0",
    "react-device-detect": "^2.2.3",
    "react-dom": "^18.3.1",
    "react-google-recaptcha": "^3.1.0",
    "react-hook-form": "^7.53.2",
    "typescript": "^5.6.3"
