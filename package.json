  "devDependencies": {
    "@types/react-slick": "^0.23.13",
    "autoprefixer": "^10.4.20",
    "dotenv": "^16.4.5",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "next-pwa": "^5.6.0",
    "next-sitemap": "^4.2.3",
    "postcss": "^8.4.49",
    "react-icons": "^5.3.0",
    "react-onesignal": "^3.0.1",
    "react-share": "^5.1.1",
    "react-slick": "^0.30.2",
